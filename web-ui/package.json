{
  "name": "web-ui",
  "version": "0.0.1",
  "scripts": {
    "prepare": "npm run build-theme && npm run build",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "build-theme": "npm run smui-theme-light && npm run smui-theme-dark",
    "smui-theme-light": "smui-theme compile static/css/smui.css -i src/theme",
    "smui-theme-dark": "smui-theme compile static/css/smui-dark.css -i src/theme/dark",
    "server-watch": "nodemon server.js"
  },
  "devDependencies": {
    "@fontsource/fira-mono": "^4.5.10",
    "@material/dom": "^14.0.0",
    "@material/theme": "^14.0.0",
    "@material/typography": "^14.0.0",
    "@neoconfetti/svelte": "^1.0.0",
    "@smui/button": "^7.0.0-beta.16",
    "@smui/card": "^7.0.0-beta.16",
    "@smui/chips": "^7.0.0-beta.16",
    "@smui/form-field": "^7.0.0-beta.16",
    "@smui/icon-button": "^7.0.0-beta.16",
    "@smui/list": "^7.0.0-beta.16",
    "@smui/menu": "^7.0.0-beta.16",
    "@smui/paper": "^7.0.0-beta.16",
    "@smui/snackbar": "^7.0.0-beta.16",
    "@smui/textfield": "^7.0.0-beta.16",
    "@smui/tooltip": "^7.0.0-beta.16",
    "@smui/top-app-bar": "^7.0.0-beta.16",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-node": "^4.0.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/eslint": "8.56.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "smui-theme": "^7.0.0-beta.16",
    "svelte": "^4.2.7",
    "svelte-preprocess": "^5.1.3",
    "vite": "^5.0.3",
    "vitest": "^1.2.0"
  },
  "type": "module",
  "dependencies": {
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.3",
    "rpc-websockets": "^7.9.0",
    "yargs": "^17.7.2"
  }
}
